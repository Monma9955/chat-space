.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        group name
      .main-header__left-box__member-list
        Member:
        .main-header__left-box__member-list__member
          モンちゃん
    = link_to "Edit", "#", class: "main-header__edit-btn"

  .messages
    .message
      - for i in 1..10
        .message__upper-info
          .message__upper-info__talker
            モンちゃん
          .message__upper-info__date
            2019/10/08/19:00:00
        .message__text
          this is a #{i} th message

  .form
    .new_message
      .input-box
        %input.input-box__text{:type => "text", :placeholder => "type a message"}
        %label{class: "input-box__image"}
          = icon('fas', 'image')
          %input.input-box__image__file{type: "file"}
        = link_to "Send", "#", class: "submit-btn"

