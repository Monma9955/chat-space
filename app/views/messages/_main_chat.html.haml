.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        group name
      .main-header__left-box__member-list
        Member:
        .main-header__left-box__member-list__member
          モンちゃん
    = link_to "Edit", "#", class: "main-header__edit-btn"

  .messages
    .message
      - for i in 1..10
        .message__upper-info
          .message__upper-info__talker
            モンちゃん
          .message__upper-info__date
            2019/10/08/19:00:00
        .message__text
          this is a #{i} th message

  .form
    = form_for [@group, @message] do |f|
      .form__NewMessage
        .form__NewMessage__box
          = f.text_field :message, class: 'form__NewMessage__box__text', placeholder: "type a message"
          .form__NewMessage__box__mask
            = f.label :image, class: 'form__NewMessage__box__mask__image' do
              = icon('fas', 'image', class: 'icon')
              = f.file_field :image, class: 'file'
        = f.submit 'Send', class: 'form__NewMessage__submit-btn'

