.message{data: {message: {id: message.id}}}
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d(%a) %T")
  .message__lower
    - if message.message.present?
      %p.message__lower__text
        = message.message
    = image_tag message.image.url, class: 'message__lower__image' if message.image.present?